[mysqld]

# Basic Memory Optimizations
innodb_buffer_pool_size = 1G
innodb_log_buffer_size = 16M
tmp_table_size = 64M
max_heap_table_size = 64M
max_connections = 100
table_open_cache = 2000

# Logging
slow_query_log = 1
long_query_time = 2

# Replication Settings (if applicable)
binlog_expire_logs_seconds = 86400  # 1 day