#!/usr/bin/env bash
set -e

repository='https://ansible.build'

scripts=(
    docker-nginx-enable
    docker-nginx-reload
    get-public-ip
)

for script in "${scripts[@]}"; do
    echo "Install $script script ..."
    sudo curl -L "$repository/$script" -o "/usr/local/bin/$script"
    sudo chmod +x "/usr/local/bin/$script"
done
